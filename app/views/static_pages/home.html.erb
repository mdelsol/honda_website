<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>TuneRice Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to TuneRice</h1>

  <h2>
    Here at TuneRice, any and all Honda junkies are welcomed - from the cheapskates with riced out civics, to the classy moneywielding S2000 drivers, to the dedicated engine builders. If you drive a Honda, this website is for you - to interact with other users about anything Honda!
  </h2>

  <%= link_to "Sign up now!", users_new_url, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("honda.png", alt: "Honda logo", class: "honda-logo"),
            'http://honda.com/' %>
<% end %>